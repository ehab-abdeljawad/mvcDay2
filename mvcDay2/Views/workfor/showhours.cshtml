@using mvcDay2.viewmodel

@{
    // Layout = "_homeLayout";
    Layout = "_Layout1";
    ViewData["Title"] = "Index";
    int i = 1;
}

<table class="table">
    <thead class="table-dark">
    <th>id</th>
    <th>fname</th>
   
    <th>hours</th>
    

    </thead>
    <tbody>
        @foreach (var item in ViewBag.hours)
        {
            <tr>
                <td>@(i++)</td>
                <td>@item.fname  @item.lname</td>
                <td style="color:@item.Color">@item.hours</td>
                <td><a href="http://localhost:5052/employee/datiels/"><i class="fa-solid fa-info"></i> </a></td>
            </tr>
        }
    </tbody>
</table>

