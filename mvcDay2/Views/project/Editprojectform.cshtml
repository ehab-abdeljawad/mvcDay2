@model Project
@{
    Layout = "_Layout1";
}


<form action="/project/editprojectdb">
    <input hidden name="id" value="@Model.Id" />
    <div class="mb-3">
        <label for="pname" class="form-label">project Name</label>
        <input type="text" class="form-control" id="pname" aria-describedby="emailHelp" name="name" value="@Model.Name">

    </div>
    <div class="mb-3">
        <label for="laction" class="form-label">Location</label>
        <input type="text" class="form-control" id="location" name="Location" value="@Model.locations">
    </div>
    <div class="mb-3 form-check">
        <label for="city" class="form-label">City</label>
        <input type="text" class="form-control" id="city" name="city" value="@Model.city">
    </div>
    <div class="mb-3 form-check">
        <label class="form-label">Select Department</label>
        <select class="form-select" aria-label="Default select example" name="dept">
            @foreach (Departments item in ViewBag.Departments)
            {
                if(item.Dnum == Model.Dno)
                {
                    <option selected value="@item.Dnum">@item.Dname</option>
                }else{

                <option value="@item.Dnum">@item.Dname</option>
                }
            }
        </select>

    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>